{% extends "templates/layout.njk" %}


{% block meta %}
    {{ g.meta() }}
{% endblock %}

{% block content %}
	
	<!-- Breadcrumb -->
    <ol class="breadcrumb">
                <li class="breadcrumb-item">Home</li>
                <li class="breadcrumb-item"><a href="admin-users.html">Users</a></li>
                <li class="breadcrumb-item active">Add User</li>
            </ol>
	
	<div class="container-fluid">
        <div class="animated fadeIn">
                    <div class="row">
						
						<div class="col-sm-12">
							
							<!-- Wizard tabs start 
							<ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item active">
                                    <a class="nav-link " data-toggle="tab" data-target="#user" role="tab" aria-controls="user">User information</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" data-target="#manages" role="tab" aria-controls="manages">Assign</a>
                                </li>
                            </ul>
							-->
							<div class="tab-content">
                                <div class="tab-pane active" id="user" role="tabpanel">
									<!-- Company Setup Tab -->
									<div class="col-sm-12 nopadding">
										<div class="card">
											
											<div class="card-block col-md-6">
											
												<div class="form-group">
													<label>Name</label>
													<input type="text" class="form-control"  placeholder="Enter user name">
													
												</div>

												<div class="form-group">
													<label>Address</label>
													<input type="text" class="form-control" placeholder="Enter complete address" >
												</div>
												
												<div class="form-group">
													<label>Contact No</label>
													<input type="text" class="form-control" placeholder="Enter contact no." >
												</div>
												
												<div class="form-group">
													<label>Email</label>
													<input type="email" class="form-control" placeholder="Enter email address" >
												</div>
												
												<div class="form-group">
													<label>Expertise</label>
													<select class="form-control">
														<option selected disabled>Choose expertise</option>
														<option>Human Resource</option>
														<option>Account & Finance</option>
														<option>Information Technology</option>
														<option>Business Management</option>
													</select>
												</div>
												
												<div class="form-group">
													<label>Role</label>
													<select class="form-control">
														<option selected disabled>Choose role</option>
														<option>Chain admin</option>
														<option>Company admin</option>
														<option>Shop admin</option>
														<option>Contact Person</option>
													</select>
												</div>
												
											</div>
											<div class="card-footer">
												<button type="submit" class="btn btn-sm btn-primary float-right">Next</button>
											</div>
										</div>
									</div>
									<!-- Company Setup Tab ends -->
                                </div>
								
                                <div class="tab-pane" id="manages" role="tabpanel">
								
									<div class="col-sm-12 nopadding">
										<div class="card">
											<div class="card-block">
												<a class="btn btn-outline-primary mb-2 float-right" href="#assign"><i class="icon-plus"></i> Assign user</a>
												<table class="table table-bordered table-striped"  data-toggle="table">
													<thead>
														<tr>
															<th>ID no.</th>
															<th>Name</th>
															<th data-breakpoints="xs">Address</th>
															<th></th>
														</tr>
													</thead>
													<tbody>
														<tr>
															<td>BFN: 842000313</td>
															<td>Kvickly Nexø</td>
															<td>Købmagergade 12, Postbox 123, 3730 Nexø</td>
															<td class="text-center">
																<a href=""><i class="icon-close" title="Unassign User"></i></a>
															</td>
														</tr>
														<tr>
															<td>BFN: 842000315</td>
															<td>Kvickly Frederiksberg</td>
															<td>Falconer All 90 - 94, 2000 Frederiksberg</td>
															<td class="text-center">
																<a href=""><i class="icon-close" title="Unassign User"></i></a>
															</td>
														</tr>
													</tbody>
												</table>
												<nav>
													<ul class="pagination">
														<li class="page-item disabled"><a class="page-link" href="#">Prev</a>
														</li>
														<li class="page-item active">
															<a class="page-link" href="#">1</a>
														</li>
														<li class="page-item disabled"><a class="page-link" href="#">Next</a>
														</li>
													</ul>
												</nav>
											</div>
											<div class="card-footer">
												<button type="submit" class="btn btn-sm btn-primary float-right">Save</button>
											</div>
										</div>
									</div>
									
                                </div> 
								 
                            </div>
                        </div>
                    </div>
						
                </div>
    </div> 
    <!-- /.conainer -->
	
	<!-- Add/Edit Modal start -->
	<div class="remodal" data-remodal-id="assign" role="dialog" aria-labelledby="assign">
		<button data-remodal-action="close" class="remodal-close" aria-label="Close"></button>
		<div class="remodal-header">
			<div class="card-block"><h1>Assign [Shop/Company/Chain]</h1></div>
		</div>
		<div class="remodal-content">
			<div class="card-block">						
				<div class="col-sm-12 nopadding">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" placeholder="Enter shop/company name" list="shops">
						<datalist id="shops">
							<option>Netto Rådhuspladsen</option>
							<option>Netto Jarmers Plads</option>
							<option>Netto Vesterbrogade</option>
							<option>Kvickly Nexø</option>
							<option>Kvickly Frederiksberg</option>
						</datalist>
					</div>
				</div>
			</div>
		</div>
		<div class="remodal-footer">
			<div class="card-block">
				<button data-remodal-action="confirm" class="btn btn-primary">Assign</button>
			</div>
		</div>	  
	</div>
	<!-- Add/Edit Modal End -->
    
{% endblock %}
